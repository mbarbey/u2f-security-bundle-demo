<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Mbarbey/U2F security bundle demo</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bootstrap.min.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header class="blog-header py-3">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4 pt-1">
                    {% if app.user %}
                        <p>Welcome <strong>{{ app.user.username }}</strong></p>
                    {% endif %}
                    </div>
                    <div class="col-4 text-center">
                        {% if app.user %}
                            <a class="blog-header-logo text-dark" href="{{ path('user_list') }}">Home</a>
                        {% else %}
                            <a class="blog-header-logo text-dark" href="{{ path('home') }}">Home</a>
                        {% endif %}
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        {% if app.user %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('logout') }}">Logout</a>
                        {% else %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('login') }}">Login</a>
                        {% endif %}
                    </div>
                </div>
            </header>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('jquery-3.3.1.min.js') }}"></script>
            <script src="{{ asset('bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
